{
  "templates": {
    "supabase": {
      "description": "Supabase 데이터베이스 연결",
      "variables": {
        "SUPABASE_URL": {
          "description": "Supabase 프로젝트 URL",
          "example": "https://xxx.supabase.co",
          "required": true
        },
        "SUPABASE_ANON_KEY": {
          "description": "Supabase Anonymous Key",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
          "required": true
        },
        "SUPABASE_SERVICE_ROLE_KEY": {
          "description": "Supabase Service Role Key (서버용)",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
          "required": false
        }
      }
    },
    "vercel": {
      "description": "Vercel 배포 설정",
      "variables": {
        "VERCEL_TOKEN": {
          "description": "Vercel API Token",
          "example": "xxx",
          "required": true
        },
        "VERCEL_ORG_ID": {
          "description": "Vercel Organization ID",
          "example": "team_xxx",
          "required": false
        },
        "VERCEL_PROJECT_ID": {
          "description": "Vercel Project ID",
          "example": "prj_xxx",
          "required": false
        }
      }
    },
    "github": {
      "description": "GitHub 연동",
      "variables": {
        "GITHUB_TOKEN": {
          "description": "GitHub Personal Access Token",
          "example": "ghp_xxx",
          "required": true
        },
        "GITHUB_REPO": {
          "description": "GitHub Repository",
          "example": "username/repo-name",
          "required": true
        }
      }
    },
    "common": {
      "description": "공통 설정",
      "variables": {
        "NODE_ENV": {
          "description": "환경 설정",
          "example": "development",
          "options": ["development", "staging", "production"],
          "required": true
        },
        "PORT": {
          "description": "서버 포트",
          "example": "3000",
          "required": false
        },
        "API_URL": {
          "description": "API Base URL",
          "example": "http://localhost:3000/api",
          "required": true
        }
      }
    }
  },
  "presets": {
    "frontend": ["supabase", "vercel", "common"],
    "backend": ["supabase", "common"],
    "fullstack": ["supabase", "vercel", "github", "common"]
  }
}
